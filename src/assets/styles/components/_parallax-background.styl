.parallax-background
  flex(flex-start, center)
  display flex
  height 100%
  overflow hidden
  position relative
  width 100%
  > .background,
  > .layerBottom
    height 100%
    left 0
    position absolute
    width 100%
  > .background
    top 0
  > .layerBottom
    bottom 0
    height 3rem
    z-index 6
  > .background-1
    z-index 5
  > .background-2
    z-index 4
  > .background-3
    z-index 3
  > .background-4
    z-index 2
  > .background-5
    z-index 1
  &.-intro
    background-color rgba(black, .8)
    background-size 100% 100%
    > .layerBottom
      background url('/images/band/1.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(50%)
    > .background-1
      animation moveTreeTree 15s infinite alternate
      background url('/images/band/2.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(50%)
      top -5%
    > .background-2
      animation moveTree 15s infinite alternate
      background url('/images/band/4.png') center center no-repeat
      background-size 100% 100%
      left -2.5%
      mix-blend-mode multiply
      top 7.5%
    > .background-3
      animation moveTreeTwo 15s infinite alternate
      background url('/images/band/6.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(30%)
      mix-blend-mode multiply

@keyframes moveTree
  0%
    transform: scale(1.00)
    transform: rotate(0)
  25%
    transform: scale(1.03)
    transform: rotate(1.5deg)
  50%
    transform: scale(1.00)
    transform: rotate(0)
  75%
    transform: scale(1.03)
    transform: rotate(1.5deg)
  100%
    transform: scale(1.00)
    transform: rotate(0)

@keyframes moveTreeTwo
  0%
    transform: scale(1.00)
    transform: rotate(0)
  25%
    transform: scale(1.03)
    transform: rotate(-1.5deg)
  50%
    transform: scale(1.00)
    transform: rotate(0)
  75%
    transform: scale(1.03)
    transform: rotate(-1.5deg)
  100%
    transform: scale(1.00)
    transform: rotate(0)
@keyframes moveTreeTree
  from
    transform scale(1.00)
  to
    transform scale(1.02)
