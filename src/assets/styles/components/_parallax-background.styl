.parallax-background
  flex(flex-start, center)
  display flex
  height 100%
  overflow hidden
  position relative
  width 100%
  > .background,
  > .layerBottom
    height 100%
    left 0
    position absolute
    width 100%
  > .layerBottom
    bottom 0
    height 3rem
    z-index 7
  > .background-1
    z-index 5
  > .background-2
    z-index 4
  > .background-3
    z-index 3
  > .background-4
    z-index 2
  > .background-5
    z-index 1
  > .background-6
    z-index 0
  &.-intro
    animation earthquakeSm 0.5s 15.85s forwards
    background-color rgba(black, .8)
    background-size 100% 100%
    +media(mobile)
      animation earthquakeMd 0.5s 15.85s forwards
    +media(desktop)
      animation earthquake 0.5s 15.85s forwards
    > .background
      top 0
    > .layerBottom
      background url('../../assets/images/band/1.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(50%)
    > .background-1
      animation moveTreeTree 15s infinite alternate
      background url('../../assets/images/band/2.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(50%)
      top -5%
    > .background-2
      animation moveTree 15s infinite alternate
      background url('../../assets/images/band/4.png') center center no-repeat
      background-size 100% 100%
      left -2.5%
      mix-blend-mode multiply
      top 7.5%
    > .background-3
      animation moveTreeTwo 15s infinite alternate
      background url('../../assets/images/band/6.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(30%)
      mix-blend-mode multiply
  &.-levelSelection,
  &.-abilities
    > .background
      flex(center, center)
      width 400%
      > .divisions
        height 100%
        width 25%
  &.-levelSelection
    align-items center
    background url('../../assets/images/forest/forestBackground.png') center center no-repeat
    background-size 100% 100%
    width 100%
    > .background
      top 0
    > .layerBottom
      background url('../../assets/images/forest/forestFloor2.png') center center no-repeat
      background-size 100% 100%
    > .background-1
      animation moveLeft 200s infinite
      > .divisions
        background url('../../assets/images/forest/forestFloor1.png') center center no-repeat
        background-size 100% 100%
      bottom 0
      height 5rem
      top unset
      z-index 3
    > .background-2
      animation moveLeft 40s infinite forwards
      > .divisions
        background url('../../assets/images/forest/trees1.png') center center
        background-size 100% 100%
      left -1%
      top 0
    > .background-3
      animation moveLeft 125s infinite
      > .divisions
        background url('../../assets/images/forest/trees2.png') center center
        background-size 100% 100%
    > .background-4
      animation moveLeft 175s infinite
      > .divisions
        background url('../../assets/images/forest/treesFake.png') center center
        background-size 100% 100%
        top 0
    > .background-5
      animation moveLeft 125s infinite
      > .divisions
        background url('../../assets/images/forest/treesFake2.png') center center
        background-size 100% 100%
      top 0
    > .background-6
      animation moveLeft 350s infinite
      height 90%
      > .divisions
        background url('../../assets/images/forest/treesShadow.png') center center no-repeat
        background-size 100% 100%
        top 0
  &.-abilities,
  &.-bornIn,
  &.-hobbies
    align-items flex-start
  &.-abilities
    animation fadeIn .5s forwards
    background url('../../assets/images/lsdForest/7.png') center center no-repeat
    background-size 100% 100%
    > .background-1
      animation moveGrass 20s 4s infinite alternate
      bottom 0
      height 24%
      top unset
      > .divisions
        background url('../../assets/images/lsdForest/2.png') center center no-repeat
        background-size 100% 100%
    > .background-2
      animation moveGrass 25s 22s infinite alternate
      bottom 0
      height 80%
      top unset
      > .divisions
        background url('../../assets/images/lsdForest/3.png') center center no-repeat
        background-size 100% 100%
    > .background-3
      animation moveGrass 155s infinite alternate
      > .divisions
        background url('../../assets/images/lsdForest/4.png') center center no-repeat
        background-size 100% 100%
    > .background-4 > .divisions
      background url('../../assets/images/lsdForest/5.png') center center no-repeat
      background-size 100% 100%
    > .background-5 > .divisions
      background url('../../assets/images/lsdForest/6.png') center center no-repeat
      background-size 100% 100%
    > .layerBottom
      animation unset
      background url('../../assets/images/lsdForest/1.png') center center no-repeat
      background-size 100% 100%
      bottom 0
      height 12.5%
    >.mush-1,
    > .mush-1-1,
    > .mush-1-2,
    > .mush-2,
    > .mush-2-1,
    > .mush-2-2,
    > .mush-3,
    > .mush-3-1,
    > .mush-3-2,
    > .mush-1
      opacity .1
      position absolute
      transform scale(.1)
      z-index 4
    > .mush-1
      animation mushGrowth 1s 2s forwards, mushMove 2.5s 3s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush1.png') center center no-repeat
      background-size 100% 100%
      bottom 40%
      height 30%;
      left 8.5%
      width 8%
    > .mush-1-1
      animation mushGrowth 1s 2.25s forwards, mushMove 4s 3.25s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush1-1.png') center center no-repeat
      background-size 100% 100%
      bottom 39%
      left 17%
      height 20%
      width 4%
    > .mush-1-2
      animation mushGrowth 1s 2.5s forwards, mushMove 5.5s 3.5s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush1-2.png') center center no-repeat
      background-size 100% 100%
      bottom 36%
      left 19.7%
      height 22.5%
      width 5%
      transform rotate(10deg)
    > .mush-2
      animation mushGrowth 1s 2.75s forwards, mushMove 8.5s 3.75s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush2.png') center center no-repeat
      background-size 100% 100%
      bottom 33%
      left 31%
      height 30%
      width 10%
    > .mush-2-1
      animation mushGrowth 1s 3s forwards, mushMove 5s 4s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush2-1.png') center center no-repeat
      background-size 100% 100%
      bottom 39.7%
      left 46%
      height 25%
      width 8%
    > .mush-2-2
      animation mushGrowth 1s 3.25s forwards, mushMove 2.75s 4.25s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush2-2.png') center center no-repeat
      background-size 100% 100%
      bottom 33%
      left 43%
      height 12.5%
      width 4%
    > .mush-3
      animation mushGrowth 1s 3.5s forwards, mushMove 10s 4.5s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush3.png') center center no-repeat
      background-size 100% 100%
      bottom 37%
      left 68%
      height 30%
      width 10%
    > .mush-3-1
      animation mushGrowth 1s 3.75s forwards, mushMove 6s 4.75s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush3-1.png') center center no-repeat
      background-size 100% 100%
      bottom 39%
      left 76%
      height 30%
      width 10%
    > .mush-3-2
      animation mushGrowth 1s 4s forwards, mushMove 7s 5s forwards infinite alternate
      background url('../../assets/images/lsdForest/mush3-2.png') center center no-repeat
      background-size 100% 100%
      bottom 37%
      left 85%
      height 12.5%
      width 6%
    > .tree-1,
    > .tree-2,
    > .tree-3
      opacity .1
      position absolute
      transform scale(.1)
      z-index 4
    > .tree-1
      animation treeGrowth .5s .5s forwards
      background url('../../assets/images/lsdForest/tree1.png') center center no-repeat
      background-size 100% 100%
      height 39%
      left 5.5%
      top 52.5%
      width 25%
    > .tree-2
      animation treeGrowth .5s 1s forwards
      background url('../../assets/images/lsdForest/tree2.png') center center no-repeat
      background-size 100% 100%
      height 50%
      left 30%
      top 40%
      width 30%
    > .tree-3
      animation treeGrowth .5s 1.5s forwards
      background url('../../assets/images/lsdForest/tree3.png') center center no-repeat
      background-size 100% 100%
      height 60%
      right 0
      top 40%
      width 40%
  &.-liveAndWork
    align-items start
    animation fadeIn .5s forwards
    background linear-gradient(to right, rgba(red, .55), white, rgba(red, .55))
    > .layerBottom
      display none
    > .background-1
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_2.png') center center no-repeat
        background-size 100% 100%
    > .background-2
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_3.png') center center no-repeat
        background-size 100% 100%
    > .background-3
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_1.png') center center no-repeat
        background-size 100% 100%
    > .background-4
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/rocks_2.png') center center no-repeat
        background-size 100% 100%
    > .background-5
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_4.png') center center no-repeat
        background-size 100% 100%
    > .background-6
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/rocks_1.png') center center no-repeat
        background-size 100% 100%
  &.-bornIn
    animation fadeIn .5s forwards
    background linear-gradient(to right, rgba(green, .5), rgba(white, .85), rgba(red, .55))
    background-position top center
    background-size 100% 90%
    opacity 0
    > .background-1,
    > .background-2,
    > .background-3,
    > .background-4,
    > .background-5,
    > .background-6
      background unset
      > .divisions
        background unset
    > .layerBottom
      animation emergeFlor .5s .75s forwards
      bottom -100%
      mix-blend-mode multiply
      height 15%
    > .background-1
      animation emerge .5s 1.7s forwards
      bottom -100%
      height 37.5%
      left unset
      right 20%
      width 20%
      &:before
        background url('../../assets/images/colosseum/church.png') center center no-repeat
        background-size 100% 100%
        content ''
        height 100%
        width 100%
    > .background-2
      animation emerge .5s 1.25s forwards
      bottom -100%
      height 55%
      left 0
      top unset
      width 60%
      &:before
        background url('../../assets/images/colosseum/colosseum.png') center center no-repeat
        background-size 100% 100%
        content ''
        height 100%
        width 100%
    > .background-3
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_3.png') center center no-repeat
        background-size 100% 100%
    > .background-5
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_1.png') center center no-repeat
        background-size 100% 100%
    > .background-4
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_2.png') center center no-repeat
        background-size 100% 100%
    > .background-6
      animation emerge .5s 2.2s forwards
      bottom -100%
      height 80%
      left unset
      right 0
      top unset
      width 20%
      &:before
        background url('../../assets/images/colosseum/pisa.png') center center no-repeat
        background-size 100% 100%
        content ''
        filter grayscale(0.5)
        height 100%
        width 100%
  &.-hobbies
    > .layerBottom
      background url('../../assets/images/hobbies/floor.png') center center no-repeat
      background-size 100% 100%
    > .background-1
      background url('../../assets/images/hobbies/infopost.png') center center no-repeat
      background-size 100% 100%
      > .game-title
        left 10%
        position absolute
        top 87%
    > .background-2
      background url('../../assets/images/hobbies/wires.png') center center no-repeat
      background-size 100% 100%
    > .background-3
      background url('../../assets/images/hobbies/columns.png') center center no-repeat
      background-size 100% 100%
    > .background-4
      animation trainMove 40s infinite alternate
      background url('../../assets/images/hobbies/train.png') center center no-repeat
      background-size 100% 100%
      height 50%
      left 15%
      top 25%
    > .background-5
      background url('../../assets/images/hobbies/rails.png') center center no-repeat
      background-size 100% 100%
      > .game-title
        left 5%
        top 26%
    > .background-6
      background url('../../assets/images/hobbies/bg.png') center center no-repeat
      background-size 100% 100%
