.parallax-background
  flex(flex-start, center)
  display flex
  height 100%
  overflow hidden
  position relative
  width 100%
  > .background,
  > .layerBottom
    height 100%
    left 0
    position absolute
    width 100%
  > .layerBottom
    bottom 0
    height 3rem
    z-index 7
  > .background-1
    z-index 5
  > .background-2
    z-index 4
  > .background-3
    z-index 3
  > .background-4
    z-index 2
  > .background-5
    z-index 1
  > .background-6
    z-index 1
  &.-intro
    animation earthquakeSm 0.5s 15.85s forwards
    background-color rgba(black, .8)
    background-size 100% 100%
    +media(mobile)
      animation earthquakeMd 0.5s 15.85s forwards
    +media(desktop)
      animation earthquake 0.5s 15.85s forwards
    > .background
      top 0
    > .layerBottom
      background url('../../assets/images/band/1.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(50%)
    > .background-1
      animation moveTreeTree 15s infinite alternate
      background url('../../assets/images/band/2.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(50%)
      top -5%
    > .background-2
      animation moveTree 15s infinite alternate
      background url('../../assets/images/band/4.png') center center no-repeat
      background-size 100% 100%
      left -2.5%
      mix-blend-mode multiply
      top 7.5%
    > .background-3
      animation moveTreeTwo 15s infinite alternate
      background url('../../assets/images/band/6.png') center center no-repeat
      background-size 100% 100%
      filter grayscale(30%)
      mix-blend-mode multiply
  &.-levelSelection
    align-items center
    background url('../../assets/images/forest/forestBackground.png') center center no-repeat
    background-size 100% 100%
    width 100%
    > .background
      flex(center, center)
      top 0
      width 400%
      > .divisions
        height 100%
        width 25%
    > .layerBottom
      background url('../../assets/images/forest/forestFloor2.png') center center no-repeat
      background-size 100% 100%
    > .background-1
      animation moveLeft 200s infinite
      > .divisions
        background url('../../assets/images/forest/forestFloor1.png') center center no-repeat
        background-size 100% 100%
      bottom 0
      height 5rem
      top unset
      z-index 3
    > .background-2
      animation moveLeft 40s infinite forwards
      > .divisions
        background url('../../assets/images/forest/trees1.png') center center
        background-size 100% 100%
      left -1%
      top 0
    > .background-3
      animation moveLeft 125s infinite
      > .divisions
        background url('../../assets/images/forest/trees2.png') center center
        background-size 100% 100%
    > .background-4
      animation moveLeft 175s infinite
      > .divisions
        background url('../../assets/images/forest/treesFake.png') center center
        background-size 100% 100%
        top 0
    > .background-5
      animation moveLeft 125s infinite
      > .divisions
        background url('../../assets/images/forest/treesFake2.png') center center
        background-size 100% 100%
      top 0
    > .background-6
      animation moveLeft 350s infinite
      height 90%
      > .divisions
        background url('../../assets/images/forest/treesShadow.png') center center no-repeat
        background-size 100% 100%
        top 0
  &.-bornIn
    > .background-1,
    > .background-2,
    > .background-3,
    > .background-4,
    > .background-5,
    > .background-6
      background unset
      > .divisions
        background unset
  &.-bornIn
    align-items flex-start
    animation fadeIn .5s forwards
    background linear-gradient(to right, rgba(action, .5), rgba(white, .85), rgba(red, .55))
    background-position top center
    background-size 100% 90%
    background-color yellow
    opacity 0
    > .layerBottom
      animation emergeFlor .5s .75s forwards
      bottom -100%
      mix-blend-mode multiply
      height 15%
    > .background-1
      animation emerge .5s 1.7s forwards
      bottom -100%
      height 37.5%
      left unset
      right 20%
      width 20%
      &:before
        background url('../../assets/images/colosseum/church.png') center center no-repeat
        background-size 100% 100%
        content ''
        height 100%
        width 100%
    > .background-2
      animation emerge .5s 1.25s forwards
      bottom -100%
      height 55%
      left 0
      top unset
      width 60%
      &:before
        background url('../../assets/images/colosseum/colosseum.png') center center no-repeat
        background-size 100% 100%
        content ''
        height 100%
        width 100%
    > .background-3
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_3.png') center center no-repeat
        background-size 100% 100%
    > .background-5
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_1.png') center center no-repeat
        background-size 100% 100%
    > .background-4
      > .divisions
        background url('../../assets/images/peruRepresentation/Mountains/layers/clouds_2.png') center center no-repeat
        background-size 100% 100%
    > .background-6
      animation emerge .5s 2.2s forwards
      bottom -100%
      height 80%
      left unset
      right 0
      top unset
      width 20%
      &:before
        background url('../../assets/images/colosseum/pisa.png') center center no-repeat
        background-size 100% 100%
        content ''
        filter grayscale(0.5)
        height 100%
        width 100%

@keyframes moveLeft
  from
    left 0%
  to
    left -300%

@keyframes moveTree
  0%
    transform: scale(1.00)
    transform: rotate(0)
  25%
    transform: scale(1.03)
    transform: rotate(1.5deg)
  50%
    transform: scale(1.00)
    transform: rotate(0)
  75%
    transform: scale(1.03)
    transform: rotate(1.5deg)
  100%
    transform: scale(1.00)
    transform: rotate(0)

@keyframes moveTreeTwo
  0%
    transform: scale(1.00)
    transform: rotate(0)
  25%
    transform: scale(1.03)
    transform: rotate(-1.5deg)
  50%
    transform: scale(1.00)
    transform: rotate(0)
  75%
    transform: scale(1.03)
    transform: rotate(-1.5deg)
  100%
    transform: scale(1.00)
    transform: rotate(0)

@keyframes moveTreeTree
  from
    transform scale(1.00)
  to
    transform scale(1.02)

@keyframes earthquake
  0%
    transform: scale(1.03) rotate(0)
  30%,
  60%,
  90%
    transform: scale(1.03) rotate(1deg)
  15%,
  45%,
  75%
    transform: scale(1.03) rotate(-1deg)
  100%
    transform: scale(1.00) rotate(0)

@keyframes earthquakeSm
  0%
    transform: scale(1.03) rotate(0)
  30%,
  60%,
  90%
    transform: scale(1.03) rotate(1deg)
  15%,
  45%,
  75%
    transform: scale(1.03) rotate(-1deg)
  100%
    transform: scale(1.00) rotate(0)

@keyframes earthquakeMd
  0%
    transform: scale(1.03) rotate(0)
  30%,
  60%,
  90%
    transform: scale(1.03) rotate(1deg)
  15%,
  45%,
  75%
    transform: scale(1.03) rotate(-1deg)
  100%
    transform: scale(1.00) rotate(0)

@keyframes emerge
  0%
    bottom -100%
    transform: scale(1) rotate(0)
  15%
    transform: scale(1.02) rotate(1deg)
  30%
    transform: scale(1) rotate(0)
  45%
    transform: scale(1.02) rotate(1deg)
  60%
    transform: scale(1) rotate(0)
  75%
    transform: scale(1.02) rotate(1deg)
  90%,
  100%
    bottom 9%
    transform: scale(1) rotate(0)

@keyframes emergeFlor
  0%
    bottom -100%
    transform: scale(1) rotate(0)
  15%
    transform: scale(1.02) rotate(1deg)
  30%
    transform: scale(1) rotate(0)
  45%
    transform: scale(1.02) rotate(1deg)
  60%
    transform: scale(1) rotate(0)
  75%
    transform: scale(1.02) rotate(1deg)
  90%,
  100%
    bottom -5%
    transform: scale(1) rotate(0)
