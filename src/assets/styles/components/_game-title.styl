.game-title,
.game-title > *
  color white
  font-family titleFont
  font-size 2.5rem
  letter-spacing .25rem
  line-height 3rem
  margin 0 0 1rem
  position relative
  text-shadow -.25rem 0 darken(primary, 15%), 0 .45rem black, .45rem 0 black, 0 -.25rem darken(primary, 15%)
  text-transform uppercase
  width 100%
  z-index 7
  +media(mobile)
    font-size 5rem
    line-height 5.5rem
  &.-small
    font-size 1rem
    line-height 1.5rem
    margin-bottom 0
    text-shadow -.15rem 0 darken(warning, 15%), 0 .35rem black, .35rem 0 black, 0 -.15rem darken(warning, 15%)
    width auto
    +media(mobile)
      font-size 2rem
      line-height 2.5rem
