.game-title,
.game-title > p,
.game-title > h1,
.game-title > h2,
.game-title > h3,
.game-title > h4,
.game-title > span
  color white
  font-family titleFont
  font-size 125%
  letter-spacing .25rem
  line-height 150%
  position relative
  text-shadow -.15rem 0 darken(primary, 15%), 0 .25rem black, .25rem 0 black, 0 -.15rem darken(primary, 15%)
  text-transform uppercase
  width 100%
  word-break normal
  z-index 8
  +media(mobile)
    font-size 125%
    line-height 150%
  +media(desktop)
    font-size 150%
    line-height 175%
  &.-cartel
    animation fadeIn 1.5s 2.7s ease-in forwards
    color white
    font-size 100%
    line-height 150%
    margin-top 3rem
    opacity 0
    padding 1rem
    position relative
    text-shadow -.15rem 0 black, 0 .25rem black, .25rem 0 black, 0 -.15rem black
    width auto
    +media(mobile)
      margin-top 4rem
    +media(desktop)
      font-size 150%
      line-height 200%
    &.-abilities
      animation fadeIn 1.5s 5s ease-in forwards
  &.-ability
    bottom 0
    font-size 50%
    font-weight bold
    left 0
    line-height 100%
    margin auto
    opacity 0
    right 0
    width auto
    z-index 9
    +media(mobile)
      font-size 75%
    +media(desktop)
      font-size 100%
    &.-backend
      animation fadeIn .5s 3.75s forwards
      top 45%
      +media(mobile)
        left -4%
    &.-frontend
      animation fadeIn .5s 4.5s forwards
      left -5%
      top 60%
    &.-animation
      animation fadeIn .5s 5.25s forwards
      top 55%
  &.-small
    font-size 100%
    line-height 150%
    margin-bottom 0
    text-shadow -.1rem 0 black, 0 .2rem black, .2rem 0 black, 0 -.1rem black
    width auto
.expertise
  line-height: 100%
  +media(mobile)
    line-height 150%
  > i
    font-size 50%
    +media(mobile)
      font-size 100%