.game-start-button
  color white
  flex(center, flex-start)
  font-family secondaryFont
  font-size 2rem
  letter-spacing .25rem
  line-height 2.5rem
  margin 0
  padding .5rem .25rem
  position relative
  text-align left
  text-decoration none
  text-shadow -.25rem 0 darken(primary, 15%), 0 .45rem black, .45rem 0 black, 0 -.25rem darken(primary, 15%)
  text-transform uppercase
  &.-selected
    &:before
      bottom 0
      content '>'
      font-weight bold
      height 2rem
      margin auto
      position absolute
      left -1.5rem
      top 0