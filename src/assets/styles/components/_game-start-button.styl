.game-start-button
  color white
  flex(center, flex-start)
  font-family titleFont
  font-size 1rem
  letter-spacing .25rem
  line-height 1.5rem
  margin 0
  padding .5rem .25rem
  position relative
  text-align left
  text-decoration none
  text-shadow -.15rem 0 darken(primary, 15%), 0 .25rem black, .25rem 0 black, 0 -.15rem darken(primary, 15%)
  text-transform uppercase
  word-break normal
  +media(desktop)
    font-size 1.25rem
    line-height 1.75rem
  &.-selected
    &:before
      bottom 0
      content '>'
      font-weight bold
      height 2rem
      margin auto
      position absolute
      left -1.5rem
      top 0