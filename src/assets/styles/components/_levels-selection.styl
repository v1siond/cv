.levels-selection
  flex(center, center)
  height 80vh
  max-width 80vw
  position relative
  width calc(100% - 2rem)
  z-index 9
  +media(desktop)
    height 70vh
  > .level
    flex(flex-start, center)
    border .25rem solid white
    color white
    cursor pointer
    height 50%
    list-style none
    padding 1.5rem
    position relative
    text-decoration none
    width 50%
    &:before
      background-color rgba(black, .5)
      bottom 0
      content ''
      height 100%
      left 0
      opacity 0
      position absolute
      right 0
      top 0
      transition fastTransition
      width 100%
      z-index 0
    &:hover:before
      opacity 1
    > h3
      font-family titleFont
      font-size 1rem
      position relative
      text-shadow -.15rem 0 black, 0 .25rem black, .25rem 0 black, 0 -.15rem black
      z-index 1
      +media(desktop)
        font-size 2rem
        line-height 2.5rem
    &.-about
      background url('../../assets/images/bornIn.gif') center center no-repeat
      background-size cover
    &.-skills
      background url('../../assets/images/level_2.gif') center center no-repeat
      background-size cover
    &.-experience
      background url('../../assets/images/level_3.gif') center center no-repeat
      background-size cover
    &.-credits
      background url('../../assets/images/credits.gif') center center no-repeat
      background-size cover

