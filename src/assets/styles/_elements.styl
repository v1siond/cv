*
  box-sizing border-box
  font-family secondaryFont
  margin 0
  padding 0
  word-break break-word

#app
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  background-color lighten(bg, 5%)
  font-family 'Roboto', Helvetica, Arial, sans-serif
  max-width 100%
  text-align center

.section
  align-content flex-start
  flex(flex-start, center)
  margin 0
  overflow hidden
  position relative
  width 100%
  z-index 0
  > div
    width 100%
  &.new-post
    max-width unset
    width 100%
  &.-login
    margin-top 0
  &.-intro
    height 100vh
  &.-presentation
    align-content center
    align-items center
    animation fadeIn .5s forwards
    background lighten(black, 15%)
    opacity 0
  &.-credits
    background-color lighten(black, 15%)
    height unset !important
    max-height unset
    overflow visible

.footer
  background lighten(black, 15%)
  flex(center, center)
  padding 4rem 1rem 1rem
  > .about,
  > .legal,
  > .about > p
    color white
    font-size 115%
    line-height 110%
    text-shadow -.1rem 0 black, 0 .2rem black, .2rem 0 black, 0 -.1rem black
  > .about,
  > .legal
    width 90%
    +media(desktop)
      width 60%
  > .about
    flex(center, center)
    margin-bottom 2rem
    > figure
      background url('../images/alex.jpg') center center no-repeat
      background-size cover
      background-color lighten(black, 15%)
      border .2rem solid white
      border-radius 50%
      height 6rem
      margin 0 .5rem 1rem 0
      padding-top .5rem
      width 6rem
      +media(mobile)
        margin 0 .5rem 0 0
    > p
      text-align left
      width 100%
      +media(mobile)
        max-width calc(100% - 7rem)
  > .legal
    font-size 150%

a, button
  cursor pointer

.link
  color subtitleColor
  cursor pointer
  text-decoration none
  transition all .25s
  &:hover
    color primary

.pure-button
  color white
  background-color action
  font-size 1.75rem
  text-shadow .05rem .075rem rgba(black .5)

.pure-button.-fixed
  bottom 2.5rem
  font-size 1.75rem
  font-weight 400
  position fixed
  right 2.5rem

.pure-form.-login,
.pure-form.-signup,
.pure-form.-categories
  max-width 45rem

dd > .link
  width 100%

.pure-form-message
  margin-bottom 1rem
  text-align center
  width 100%

input
  font-size 1.75rem

.fa,
.fas,
.far
  &:before
    font-family 'Font Awesome 5 Pro'
